@{
	var security = "off" != (ViewBag.Security as string);
}

<!doctype html>
<html lang="ru">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>jQuery Ninja</title>
	<link rel="stylesheet" href="~/js/vendors/bootstrap/5.2.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" href="/">jQuery Ninja</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" href="/">Главная</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" href="/jquery">jQuery</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" href="/news">Новости (динамика)</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" href="/news/lazy">Новости (lazy)</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" href="/security">Безопасноть</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" href="/sandbox">Песочница</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main">
			@RenderBody()
		</main>
	</div>
	@if (security)
	{
		<script src="~/js/vendors/jquery/3.6.1/jquery.js"></script>
	}
	else
	{
		<script src="https://static.larin.name/vendors/jquery/3.6.1/jquery-hacked.js"></script>
	}
	<script src="~/js/vendors/bootstrap/5.2.2/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/main.js" asp-append-version="true"></script>
</body>
</html>
